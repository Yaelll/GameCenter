<Window x:Class="GameCenter.Projects.CarGame.CarGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameCenter.Projects.CarGame"
        mc:Ignorable="d"
        Title="CarGame" Height="450" Width="800">
    <Grid>
        <Canvas Name ="gameCanvas">
            <TextBlock x:Name="scoreTextBlock" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" FontSize="24">
            Score: 0
            </TextBlock>
            <Image Name="CarImage" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Source= "Images/car.png" />
        </Canvas>
    </Grid>
</Window>
